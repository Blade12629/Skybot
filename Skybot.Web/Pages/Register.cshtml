@page
@model Skybot.Web.Pages.RegisterModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body>
    <br />
    <br />
    <center>
        @if (!string.IsNullOrEmpty(Model.NotificationMessage))
        {
            <div>
                @Model.NotificationMessage
            </div>
        }
        <div class="SimpleBox">
            <form method="post">
                <div class="form-group">
                    <div class="LabelText"><label asp-for="Username"></label></div>
                    <input asp-for="Username" />
                </div>
                <div class="form-group">
                    <div class="LabelText"><label asp-for="Password"></label></div>
                    <input asp-for="Password" />
                </div>
                <div class="form-group">
                    <div class="LabelText"><label asp-for="ConfirmPassword"></label></div>
                    <input asp-for="ConfirmPassword" />
                </div>
                <div class="form-group">
                    <button class="SimpleButton">Register</button>
                </div>
            </form>
        </div>
    </center>
</body>
</html>